NAME = libft.a

CC = gcc

CFLAGS = -Wall -Werror -Wextra

SRC 	=	ft_calloc.c	ft_isdigit.c ft_memcmp.c ft_putstr_fd.c ft_strlcat.c ft_strnstr.c ft_toupper.c ft_isalnum.c ft_isprint.c ft_memcpy.c ft_putchar_fd.c ft_strchr.c ft_strlcpy.c ft_strrchr.c ft_atoi.c ft_isalpha.c ft_itoa.c ft_memmove.c ft_putendl_fd.c ft_strdup.c ft_strlen.c ft_substr.c ft_bzero.c ft_isascii.c ft_memchr.c ft_memset.c ft_putnbr_fd.c ft_strjoin.c ft_strncmp.c ft_tolower.c ft_strmapi.c ft_strtrim.c 

OBJS = $(SRC:.c=.o)

all: $(NAME)

$(NAME) : $(OBJS)
		  ar -rcs $(NAME) $(OBJS)
		  ranlib $(NAME)

clean :
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re : fclean all
